{
    "C_Cpp.default.compilerPath": "C:/MinGW/bin/gcc.exe",
    "C_Cpp.default.intelliSenseMode": "gcc-x64",
    "C_Cpp.default.includePath": [
        "${workspaceFolder}/inc"
    ],
    "files.associations": {
        "windows.h": "c",
        "dependences.h": "c",
        "conio.h": "c",
        "stdio.h": "c"
    },
    
    "code-runner.executorMap": {
        "c": "cd $dir && C:\\MinGW\\bin\\gcc.exe ${workspaceFolder}\\src\\*.c -o ${fileDirname}\\output\\${fileBasenameNoExtension}.exe -luser32 -lgdi32 && ${fileDirname}\\output\\${fileBasenameNoExtension}.exe"
    }
}